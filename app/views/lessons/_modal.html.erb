<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLongTitle">Review Your Lesson's details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
         <!--  <span aria-hidden="true">&times;</span> -->
        </button>
      </div>
      <div class="modal-body text-center">
        <h5><%= @lesson.name %></h5>
        <h5><%= @lesson.description %></h5>
        <h5>$ <%= @lesson.price %></h5>
        <h5><%= @lesson.duration %> minutes</h5>
        <h5 id="booking_time"></h5>
      </div>
      <div class="modal-footer">
        <button type="button" id="confirm-btn" class="btn btn-primary">Confirm</button>
      </div>
    </div>
  </div>
</div>
