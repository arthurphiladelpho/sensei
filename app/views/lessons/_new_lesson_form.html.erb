<%= simple_form_for @lesson do |f| %>
  <%= f.input :name%>
  <%= f.input :description%>
  <%= f.input :style%>
  <%= f.integer :difficulty%>
  <%= f.integer :duration%>
  <%= f.integer :price%>
  <%= f.input :location%>
  <%= f.submit "Confirm", class: "btn btn-primary", id: "confirm-button" %>
<% end %>

