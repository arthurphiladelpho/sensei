<%= simple_form_for [@lesson, @booking], class: "align-middle", method: :post do |t| %>
  <%= t.input :datetime, as: :string, input_html: { class: "datetimepicker" }, label: 'Date and Time', required: true, placeholder: "  Pick date and time", id:"datetime-label" %>
  <%= t.submit "Book it now!", class:"btn btn-primary", id:"book-btn" %>

<% end %>
