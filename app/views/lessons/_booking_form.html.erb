<%= simple_form_for :booking, class: "align-middle", method: :get do |t| %>
  <%= t.input :datetime, as: :string, input_html: { class: "datetimepicker" }, label: 'Date and Time', required: false, placeholder: "  Pick date and time", id:"datetime-label" %>
  <%= t.submit "Book it now!", class:"btn btn-primary book-btn" %>
<% end %>
